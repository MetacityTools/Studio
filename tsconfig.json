{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./studio",
    "paths": {
      "@editor/*": ["./studio/src/components/Editor/*"],
      "@elements/*": ["./studio/src/components/Elements/*"],
      "@utils/*": ["./studio/src/utils/*"],
      "@bananagl/*": ["./studio/src/bananagl/*"],
      "@assets/*": ["./studio/src/assets/*"],
    }
  },
  "include": ["src", "plugins"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
